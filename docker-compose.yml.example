version: '3.8'

services:
  app:
    build: .
    volumes:
      - ./:/var/www
      - /var/www/node_modules
      - /var/www/vendor
    networks:
      - laravel
    depends_on:
      - db

  nginx:
    image: nginx:alpine
    ports:
      - "80:80"
    volumes:
      - ./:/var/www
      - ./.docker/nginx/nginx.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - app
    networks:
      - laravel

  db:
    image: postgres:12-alpine
    environment:
      POSTGRES_DB: laravel
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    ports:
      - "5432:5432"
    volumes:
      - "./.docker/dbdata:/var/lib/postgresql/data"
    networks:
      - laravel

networks:
  laravel: